---
import ContentWidth from "./ContentWidth.astro";

const navItems = [
  { text: "Inicio", route: "/" },
  { text: "Nosotros", route: "/about-us" },
  { text: "Servicios", route: "/services" },
  { text: "Cont√°ctanos", route: "/contact-us" },
];
---
<header class="sticky top-0 z-50 bg-white before:backdrop-blur-sm shadow-md transition-all">
  <ContentWidth>
    <div class="flex justify-between items-center py-4">
      <a href="/" class="flex items-center gap-2">
        <img src="/logo.png" class="w-15" alt="Logo de Contratista Servicios Generales Asociados" />
      </a>
      <nav class="hidden md:flex">
        <ul class="flex gap-6 font-semibold text-gray-700">
          {
            navItems.map((nav) => (
              <li class="relative group">
                <a
                  href={nav.route}
                  class="inline-block px-2 py-1 transition-colors duration-200 hover:text-black focus:text-black focus:outline-none"
                >
                  {nav.text}
                  <span class="block h-[2px] bg-black scale-x-0 group-hover:scale-x-100 group-focus:scale-x-100 transition-transform duration-300 origin-left mt-1"></span>
                </a>
              </li>
            ))
          }
        </ul>
      </nav>
    </div>
  </ContentWidth>
</header>
